{
  "name": "garry-micro-dev-utilities",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "A collection of small, fast, browser-only developer tools that solve everyday engineering problems",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest --coverage",
    "test:coverage": "jest --coverage",
    "preview": "vite preview",
    "prepare": "husky",
    "start": "vite",
    "serve": "vite",
    "validate": "node scripts/validate-openapi.js"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,md,json}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@reduxjs/toolkit": "^2.11.2",
    "@tailwindcss/vite": "^4.1.18",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "gpt-tokenizer": "^3.4.0",
    "js-yaml": "^4.1.0",
    "jwt-decode": "^4.0.0",
    "lucide-react": "^0.563.0",
    "radix-ui": "^1.4.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.71.1",
    "react-markdown": "^10.1.0",
    "react-redux": "^9.2.0",
    "remark-gfm": "^4.0.1",
    "sonner": "^2.0.7",
    "swagger-ui-react": "^5.17.14",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@changesets/cli": "^2.0.0",
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/js": "^9.39.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^16.1.0",
    "@types/jest": "^29.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "husky": "^9.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "lint-staged": "^13.0.0",
    "prettier": "^3.0.0",
    "shadcn": "^3.8.4",
    "ts-jest": "^29.1.1",
    "tw-animate-css": "^1.4.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4"
  },
  "keywords": [
    "developer-tools",
    "utilities",
    "api-tools",
    "json",
    "yaml",
    "jwt",
    "curl",
    "csv",
    "sql",
    "openapi",
    "swagger",
    "browser-only",
    "no-backend"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/girijashankarj/garry-micro-dev-utilities.git"
  },
  "bugs": {
    "url": "https://github.com/girijashankarj/garry-micro-dev-utilities/issues"
  },
  "homepage": "https://github.com/girijashankarj/garry-micro-dev-utilities#readme",
  "engines": {
    "node": ">=20.19.0"
  }
